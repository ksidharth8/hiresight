generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  student
  admin
}

enum AuthProvider {
  local
  google
}

model User {
  id           String         @id @default(uuid())
  email        String         @unique
  name         String
  passwordHash String?
  role         UserRole       @default(student)
  provider     AuthProvider   @default(local)
  createdAt    DateTime       @default(now())
}
